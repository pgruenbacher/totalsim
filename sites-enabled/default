server {
    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;

    root /app;
    index index.html index.htm;

    server_name localhost;

    location / {
        try_files $uri $uri/ =404;
        autoindex on;
    }
    location /internal {
        auth_basic "Restricted";
        auth_basic_user_file /etc/nginx/auth/.htpasswd;
    }
}