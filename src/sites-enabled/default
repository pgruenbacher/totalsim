server {
    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;

    root /app;
    index index.html index.htm;

    server_name localhost;

    location / {
        try_files $uri $uri/ =404;
        autoindex on;
    }

    location /wiki/scripts {

        auth_basic "restricted to internal";
        auth_basic_user_file /etc/nginx/auth/totalsim.htpasswd;
    }

    location /wiki/honda {
        auth_basic "restricted to client";
        auth_basic_user_file /etc/nginx/auth/honda.htpasswd;
    }
}